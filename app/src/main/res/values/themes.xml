<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.DinnerHalp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorKnockout</item>
        <item name="colorOnSecondary">@color/colorKnockout</item>
        <item name="actionBarTheme">@style/ThemeOverlay.DinnerHalp.ActionBar</item>

        <item name="android:alertDialogTheme">@style/Theme.DinnerHalp.CustomAlertDialog</item>
    </style>

    <!-- Custom theme for action bar -->
    <style name="ThemeOverlay.DinnerHalp.ActionBar" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        </style>

    <!-- Custom theme for DinnerListActivity; is called in AndroidManifest -->
    <style name="Theme.DinnerHalp.DinnerListActivity" parent="Theme.DinnerHalp">
        <item name="android:actionModeBackground">@color/colorPrimaryDark</item>
        <item name="android:colorControlActivated">@color/colorLongPressSelected</item>
        <!-- Color at bottom of action bar during CAB mode -->
        <item name="android:colorLongPressedHighlight">@color/colorPrimaryDark</item>
    </style>

    <style name="HeaderText">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="ListText">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/colorDefaultText</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="DinnerListText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorDefaultText</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="HintText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorHintText</item>
    </style>

    <style name="SmallButton">
<!--        <item name="android:background">@color/colorPrimaryDark</item>-->
        <item name="android:padding">4dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorKnockout</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="HelpButton">
<!--        <item name="android:background">@color/colorPrimaryDark</item>-->
        <item name="android:padding">6dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorKnockout</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ViewDinnerText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorDefaultText</item>
    </style>

    <style name="ViewDinnerRecipeText" parent="ViewDinnerText">
        <item name="android:textSize">16sp</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="Theme.DinnerHalp.CustomAlertDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:borderlessButtonStyle">@style/Widget.Custom.Button.Borderless</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="Theme.DinnerHalp.CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/colorPrimaryDark</item>
        <item name="dividerColor">@color/colorUnselectedText</item>
        <item name="tabIndicator">@color/colorAccent</item>
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabSelectedTextColor">@color/colorKnockout</item>
        <!--        <item name="tabTextColor">@color/colorUnselectedText</item>-->
        <!--        No longer working, now using colorOnSurface for unselected tab text -->
        <item name="tabTextAppearance">@style/TextAppearance.Design.Tab</item>
        <item name="colorOnSurface">@color/colorUnselectedText</item>
    </style>

    <style name="Widget.Custom.Button.Borderless" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAppearance">@color/colorPrimary</item>
    </style>

</resources>
