<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DinnerHalp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorKnockout</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@color/colorKnockout</item>

        <!-- Customize your theme here. -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="actionBarTheme">@style/ThemeOverlay.DinnerHalp.ActionBar</item>
        <item name="alertDialogTheme">@style/Theme.DinnerHalp.NightAlertDialog</item>
        <!-- Color for active toggles and edit text fields everywhere but DinnerListActivity -->
        <item name="android:colorControlActivated">@color/colorDefaultText</item>
    </style>

    <!-- Custom theme for action bar -->
    <style name="ThemeOverlay.DinnerHalp.ActionBar" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="colorPrimary">@color/colorBackground</item>
<!--        <item name="android:textColor">@color/colorDefaultText</item>-->
    </style>

    <!-- Specific theme for DinnerListActivity to handle long press selected color -->
    <style name="Theme.DinnerHalp.DinnerListActivity" parent="Theme.DinnerHalp">
        <item name="android:actionModeBackground">@color/colorPrimaryDark</item>
        <item name="android:colorControlActivated">@color/colorLongPressSelected</item>
        <!-- Color at bottom of action bar during CAB mode -->
        <item name="android:colorLongPressedHighlight">@color/colorPrimaryDark</item>
    </style>

    <!-- Not sure whether this theme is being used anywhere; it was in day mode themes -->
    <style name="Theme.DinnerHalp.CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/colorBackground</item>
        <item name="dividerColor">@color/colorUnselectedText</item>
        <item name="tabIndicator">@color/colorKnockout</item>
        <item name="tabIndicatorColor">@color/colorKnockout</item>
        <item name="tabSelectedTextColor">@color/colorKnockout</item>
        <item name="tabTextColor">@color/colorUnselectedText</item>
<!--        Note that in the light theme, the unselected tab text uses colorOnSurface
            but tabTextColor still seems to work here -->
    </style>

    <!-- Night mode alert dialog styles (dialogs in SearchFragment and ManageFragment) -->
    <style name="Theme.DinnerHalp.CustomAlertDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/colorDefaultText</item>
        <item name="android:borderlessButtonStyle">@style/Widget.Custom.Button.Borderless</item>
    </style>

    <style name="Theme.DinnerHalp.NightAlertDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/colorDefaultText</item>
        <!-- colorAccent controls active radio button -->
        <item name="colorAccent">@color/colorDefaultText</item>
    </style>

    <style name="Widget.Custom.Button.Borderless" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <!--item name="colorPrimary">@color/colorDefaultText</item-->
    </style>

    <style name="HeaderText">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/colorDefaultText</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="HelpButton">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:padding">6dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorDefaultText</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SmallButton">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorKnockout</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>